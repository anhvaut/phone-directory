<UserControl x:Class="ControlPanel.UCOptions.SearchApplications"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Height="313" Width="417" Loaded="UserControl_Loaded">
    <Grid>
        <TextBlock FontSize="12" FontWeight="Bold" Height="21" Margin="77,13,101,0" Name="textBlock1" Text="Choose applications to search" TextAlignment="Center" VerticalAlignment="Top" />
        <CheckBox Height="16" Margin="44,64,127,0" Name="ckOutlook" VerticalAlignment="Top" Checked="ckOutlook_Checked" Unchecked="ckOutlook_Unchecked">Search in Outlook</CheckBox>
        <CheckBox Height="16" Margin="44,127,120,0" Name="ckAcctiveDirectory" VerticalAlignment="Top" Checked="ckAcctiveDirectory_Checked" Unchecked="ckAcctiveDirectory_Unchecked">Search in Active Directory</CheckBox><TextBox Margin="57,0,74,120" Name="txtDomainName" Height="23" VerticalAlignment="Bottom" /><TextBlock Margin="57,150,59,142" Name="textBlock2" Text="Domain Name (e.g. DC=Your Domain Name, DC=local):" />
        <CheckBox Height="16" Margin="45,92,126,0" Name="ckOutlookExpress" VerticalAlignment="Top" Checked="ckOutlookExpress_Checked" Unchecked="ckOutlookExpress_Unchecked">Search in Outlook Express (WAB)</CheckBox><Button Height="23" Margin="57,0,208,90" Name="btnCheckDomain" VerticalAlignment="Bottom" Click="btnCheckDomain_Click">Check and save domain</Button><Image Height="37" HorizontalAlignment="Right" Margin="0,0,25,114" Name="imgCheck" Stretch="None" VerticalAlignment="Bottom" Width="49" Source="/ControlPanel;component/Images/check.png" Visibility="Hidden" ToolTip="OK" /><Image HorizontalAlignment="Right" Margin="0,0,25,116" Name="imgFail" Source="/ControlPanel;component/Images/fail.jpg" Stretch="None" Visibility="Hidden" Width="49" Height="37" VerticalAlignment="Bottom" ToolTip="Invalid domain" /><TextBlock Height="21" HorizontalAlignment="Right" Margin="0,0,21,91" Name="lbDomainStatus" VerticalAlignment="Bottom" Width="49" Text="OK" TextAlignment="Center" FontWeight="Bold" Visibility="Hidden" /></Grid>
</UserControl>
