<UserControl x:Class="ControlPanel.UCOptions.SearchApplications"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Height="313" Width="417" Loaded="UserControl_Loaded">
    <Grid>
        <TextBlock FontSize="12" FontWeight="Bold" Height="21" Margin="77,13,101,0" Name="textBlock1" Text="Choose applications to search" TextAlignment="Center" VerticalAlignment="Top" /><CheckBox Height="16" Margin="44,64,127,0" Name="ckOutlook" VerticalAlignment="Top">Search in Outlook</CheckBox>
        <CheckBox Height="16" Margin="44,127,120,0" Name="ckAcctiveDirectory" VerticalAlignment="Top" Checked="ckAcctiveDirectory_Checked" Unchecked="ckAcctiveDirectory_Unchecked">Search in Active Directory</CheckBox><TextBox Margin="57,0,59,120" Name="txtDomainName" Height="23" VerticalAlignment="Bottom" /><TextBlock Margin="57,150,59,142" Name="textBlock2" Text="Domain Name (e.g. DC=WOLLUNDRA,DC=local):" /><Button Height="23" HorizontalAlignment="Right" Margin="0,0,74,27" Name="btnSave" VerticalAlignment="Bottom" Width="75" Click="btnSave_Click">Save</Button><CheckBox Height="16" Margin="45,92,126,0" Name="ckOutlookExpress" VerticalAlignment="Top">Search in Outlook Express (WAB)</CheckBox></Grid>
</UserControl>
